<!DOCTYPE html>
<html>
  <head>
    <title>RailsChallenge</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <style>
    body {
      margin-left: 5%;
      font-size: 11pt;
      font-family: Arial,Helvetica Neue,Helvetica,sans-serif;

    }
    ul.tags, ul.friend_links {
        -moz-column-count: 3;
        -moz-column-gap: 20px;
        -webkit-column-count: 3;
        -webkit-column-gap: 20px;
        column-count: 3;
        column-gap: 20px;
    }

    div#search {
      float: right; width:50%; height: 50%; margin-top: 7%;
    }
  </style>

  <body>
    <%= yield %>
  </body>
</html>
